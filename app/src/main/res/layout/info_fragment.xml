<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8E1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_border">

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_film_title"
                    style="@style/TitleCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/iv_back"
                    android:layout_toRightOf="@+id/iv_category"
                    android:background="#FFECB3"
                    android:text="Gone girl"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp">

                    <TextView
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:text="Trạng thái:" />

                    <TextView
                        android:id="@+id/tv_film_status"
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:text="hoàn tất" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp">

                    <TextView
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đạo diễn:" />

                    <TextView
                        android:id="@+id/tv_film_author"
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:text="David Fincher" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp">

                    <TextView
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:text="Quốc gia: " />

                    <TextView
                        android:id="@+id/tv_film_country"
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:layout_marginLeft="90dp"
                        android:text="Mỹ" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp">

                    <TextView
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:text="Năm:" />
                    <TextView
                        android:id="@+id/tv_film_year"
                        style="@style/TitleCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_toLeftOf="@+id/iv_back"
                        android:layout_toRightOf="@+id/iv_category"
                        android:text="2014" />
                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/lv_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></it.sephiroth.android.library.widget.HListView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/TitleCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_back"
            android:layout_toRightOf="@+id/iv_category"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold|italic"
            android:background="#FFECB3"
            android:text="Tóm Tắt Nội Dung" />

        <TextView
            style="@style/TitleCategory"
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_back"
            android:layout_toRightOf="@+id/iv_category"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="" />
    </LinearLayout>
</ScrollView>
